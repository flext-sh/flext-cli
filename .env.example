# FLEXT CLI Configuration
# Copy this to .env and customize for your environment

DEBUG=true
# Environment
ENVIRONMENT=development
LOG_LEVEL=INFO

COLOR_OUTPUT=true
CONFIRM_DESTRUCTIVE=true
# CLI Behavior
INTERACTIVE_MODE=true
PROGRESS_BARS=true

API_TIMEOUT=30
# API Connection
FLEXT_API_URL=http://localhost:8000
FLEXT_GRPC_URL=localhost:50051
FLEXT_WEB_URL=http://localhost:8080

AUTH_METHOD=jwt
# Authentication
AUTH_TOKEN=
AUTO_LOGIN=false
CREDENTIALS_FILE=~/.flext/credentials

EDITOR=nano
MAX_OUTPUT_WIDTH=120
# Output Configuration
OUTPUT_FORMAT=table
PAGER=auto

CONFIG_PATH=~/.flext/config.toml
HISTORY_FILE=~/.flext/history
HISTORY_SIZE=1000
# Workspace Configuration
WORKSPACE_PATH=~/.flext

AUTO_DEPLOY=false
DEFAULT_ENVIRONMENT=dev
# Pipeline Management
DEFAULT_PIPELINE_TYPE=etl
DEFAULT_SCHEDULE=

DOWNLOAD_PARALLEL=4
TEMP_DIR=/tmp/flext
# File Operations
UPLOAD_CHUNK_SIZE=8192

# Monitoring & Health
HEALTH_CHECK_ON_START=true
METRICS_COLLECTION=false
TELEMETRY_ENABLED=false

CACHE_RESPONSES=true
CACHE_TTL=300
# Development
PROFILE_COMMANDS=false
VERBOSE_ERRORS=true

AUTO_UPDATE_PLUGINS=false
# Plugin Management
PLUGIN_DIRECTORY=~/.flext/plugins
PLUGIN_TIMEOUT=60

BATCH_MODE=false
PARALLEL_EXECUTION=true
# Advanced Features
SHELL_COMPLETION=true
WATCH_MODE_INTERVAL=2
